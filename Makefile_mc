RUN = 30300
EVENTS = 10000

all: .sig_done .ps_done

MC_%.config: $(NPP)/MC_config/MC.config.template $(NPP)/MC_config/make_mc_config.sh
	$(NPP)/MC_config/make_mc_config.sh $(NPP)/MC_config/$*.replacements > $@

.%_done: MC_%.config
	gluex_MC.py $< $(RUN) $(EVENTS)
	date > $@

clean:
	$(RM) MC_*.config
